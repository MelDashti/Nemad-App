<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.example.project.ui.main.MainViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">


        <TextView
            android:id="@+id/header"
            style="?attr/textAppearanceHeadline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="sans-serif-condensed"
            android:text="تکمیل فرم ناراضیاتی"
            android:textColor="#AD8700"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/complaint_header"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="24dp"
            android:background="#F7F8F9"
            android:hint="عنوان شکایت"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header"
            app:layout_constraintVertical_bias="0.04000002">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/complaint_header_input_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:textSize="13sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/manager_name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:background="#F7F8F9"
            android:hint="نام مسؤول مربوطه"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/complaint_header"
            app:layout_constraintStart_toStartOf="@+id/complaint_header"
            app:layout_constraintTop_toBottomOf="@+id/complaint_header"
            app:layout_constraintVertical_bias="0.0">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/manager_name_text_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:textSize="13sp" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/complaint_text"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="156dp"
            android:layout_marginTop="16dp"
            android:background="#F7F8F9"


            android:hint="متن شکایت"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/manager_name"
            app:layout_constraintStart_toStartOf="@+id/manager_name"
            app:layout_constraintTop_toBottomOf="@+id/manager_name"
            app:layout_constraintVertical_bias="0.0">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/complaint_text_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:inputType="textMultiLine" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/sendRequest"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:text="ارسال درخواست"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:cornerRadius="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/complaint_text"
            app:layout_constraintTop_toBottomOf="@+id/uploadedFileName"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintVertical_chainStyle="packed">

        </com.google.android.material.button.MaterialButton>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/uploadFile"
            android:layout_width="139dp"
            android:layout_height="58dp"
            android:backgroundTint="#AD8700"
            android:text="افزودن پیوست"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:cornerRadius="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/complaint_text"
            app:layout_constraintTop_toBottomOf="@+id/complaint_text"
            app:layout_constraintVertical_bias="0.07999998"
            app:layout_constraintVertical_chainStyle="packed">

        </com.google.android.material.button.MaterialButton>

        <TextView
            android:id="@+id/uploadFileDescription"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="حداکثر حجم فایل ارسال 8 مگابایت فرمت های مجاز: jpg,ppt,doc,pdf"
            app:layout_constraintBottom_toBottomOf="@+id/uploadFile"
            app:layout_constraintEnd_toEndOf="@+id/complaint_text"
            app:layout_constraintStart_toEndOf="@+id/uploadFile"
            app:layout_constraintTop_toTopOf="@+id/uploadFile"
            app:layout_constraintVertical_bias="0.666" />

        <TextView
            android:id="@+id/uploadedFileName"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginTop="24dp"
            android:background="@color/primaryColor"
            android:gravity="center_vertical"
            android:text="   نام فایل آپلود شده"
            app:layout_constraintEnd_toEndOf="@+id/complaint_text"
            app:layout_constraintStart_toStartOf="@+id/uploadFile"
            app:layout_constraintTop_toBottomOf="@+id/uploadFile" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/backButton"
            android:layout_width="110dp"
            android:layout_height="58dp"
            android:layout_gravity="bottom|start"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="80dp"
            android:backgroundTint="#AD8700"
            android:text="بازگشت"
            android:textAllCaps="false"
            android:textSize="14sp"
            app:cornerRadius="100dp"
            app:icon="@drawable/ic_backicon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/sendRequest"
            app:layout_constraintTop_toBottomOf="@+id/sendRequest"
            app:layout_constraintVertical_chainStyle="packed"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>