<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.nemad.ui.main.MainViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="ExtraText">
                >

                <TextView
                    android:id="@+id/header"
                    style="?attr/textAppearanceHeadline6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="تکمیل فرم ناراضیاتی"
                    android:textColor="#AD8700"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="16dp"
                    android:background="#c0c0c0"
                    app:layout_constraintBottom_toBottomOf="@+id/header"
                    app:layout_constraintEnd_toStartOf="@+id/header"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/header" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/complaint_header"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:background="#80D9D9D9"
                    app:boxStrokeColor="#80D9D9D9"
                    app:boxStrokeWidth="0dp"
                    app:hintEnabled="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/header"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/header"
                    app:layout_constraintVertical_bias="0.04000002">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/complaint_header_input_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="عنوان شکایت"
                        android:singleLine="true"
                        android:textSize="13sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/manager_name"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="#80D9D9D9"
                    app:boxStrokeColor="#80D9D9D9"
                    app:boxStrokeWidth="0dp"
                    app:hintEnabled="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/complaint_header"
                    app:layout_constraintStart_toStartOf="@+id/complaint_header"
                    app:layout_constraintTop_toBottomOf="@+id/complaint_header"
                    app:layout_constraintVertical_bias="0.0">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/manager_name_text_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="نام مسؤول مربوطه"
                        android:singleLine="true"
                        android:textSize="13sp" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/complaint_text"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="156dp"
                    android:layout_marginTop="16dp"
                    android:background="#80D9D9D9"
                    app:boxStrokeColor="#80D9D9D9"
                    app:boxStrokeWidth="0dp"
                    app:hintEnabled="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/manager_name"
                    app:layout_constraintStart_toStartOf="@+id/manager_name"
                    app:layout_constraintTop_toBottomOf="@+id/manager_name"
                    app:layout_constraintVertical_bias="0.0">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/complaint_text_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="top"
                        android:hint="متن شکایت"
                        android:inputType="textMultiLine" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/sendRequest"
                    android:layout_width="0dp"
                    android:layout_height="54dp"
                    android:layout_marginBottom="75dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="ثبت شکایت"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    app:cornerRadius="100dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/complaint_text"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/complaint_text">

                </com.google.android.material.button.MaterialButton>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/uploadFile"
                    android:layout_width="139dp"
                    android:layout_height="58dp"
                    android:backgroundTint="#AD8700"
                    android:text="افزودن پیوست"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    app:cornerRadius="100dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/complaint_text"
                    app:layout_constraintTop_toBottomOf="@+id/complaint_text"
                    app:layout_constraintVertical_bias="0.07999998"
                    app:layout_constraintVertical_chainStyle="packed">

                </com.google.android.material.button.MaterialButton>

                <TextView
                    android:id="@+id/uploadFileDescription"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:text="حداکثر حجم فایل ارسال 8 مگابایت فرمت های مجاز: jpg,ppt,doc,pdf"
                    app:layout_constraintBottom_toBottomOf="@+id/uploadFile"
                    app:layout_constraintEnd_toEndOf="@+id/complaint_text"
                    app:layout_constraintStart_toEndOf="@+id/uploadFile"
                    app:layout_constraintTop_toTopOf="@+id/uploadFile"
                    app:layout_constraintVertical_bias="0.666" />

                <TextView
                    android:id="@+id/uploadedFileName"
                    android:layout_width="0dp"
                    android:layout_height="54dp"
                    android:layout_marginTop="24dp"
                    android:background="#80D9D9D9"
                    android:gravity="center"
                    android:text="فاقد پیوست"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="@+id/complaint_text"
                    app:layout_constraintStart_toStartOf="@+id/uploadFile"
                    app:layout_constraintTop_toBottomOf="@+id/uploadFile" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/uploadedFileRecyclerVIew"
                    android:layout_width="0dp"
                    android:layout_height="74dp"
                    android:layout_marginTop="24dp"
                    android:background="#80D9D9D9"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="@+id/complaint_text"
                    app:layout_constraintStart_toStartOf="@+id/uploadFile"
                    app:layout_constraintTop_toBottomOf="@+id/uploadFile" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>